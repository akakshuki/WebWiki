@model WikiManageWeb.Models.ModelsView.UserMv
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark container">
        <span>
            <a id="logoPage" class="navbar-brand bold" href="#">W</a>
        </span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item font-weight-bolder">
                    <a class="nav-link text-white" href="@Url.Action("Index","Home")">Trang chủ <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item font-weight-bolder text-break">
                    <a class="nav-link text-white" href="@Url.Action("CreatNenContent","Home")">Bài viết mới</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0 ">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light my-2 my-sm-0" type="submit">
                    <i class="fa fa-search"
                       aria-hidden="true"></i>
                </button>
            </form>
            <div class="m-2"></div>
            @if (Model != null)
            {
                <div class="text-center text-white">
                
                    <div class="btn-group">
                        <span data-toggle="dropdown" class="font-weight-bold" aria-haspopup="true" aria-expanded="false">
                            @Model.UserName  <i class="fas fa-caret-down"></i>
                        </span>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("LogOut","Account")">Đăng xuất</a>
                        </div>
                    </div>
                </div>


            }
            else
            {
                <div class="text-break">
                    <a href="@Url.Action("Login","Account")" class="btn border-light border-circle text-white ml-1">Đăng nhập/Đăng kí</a>
                </div>
            }

        </div>
    </nav>
</header>