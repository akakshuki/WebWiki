<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Areas/Admin/Acess/vendor/fontawesome-free/css/all.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Acess/css/simple-sidebar.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Acess/css/StyleAdmin.css" rel="stylesheet" />
</head>
<body>

    <div class="d-flex pt-1" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right " id="sidebar-wrapper">
            <a id="homeLogo" class="text-center mb-5" href="@Url.Action("index","Home")">
                <div class="sidebar-heading "><h1  onclick="window.location.href = '/'" id="logoAdmin">W</h1></div>
                <span class="text-center mx-4">Wikipiamini</span>
            </a>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index","Category")" class="list-group-item list-group-item-action bg-light">Danh Mục</a>
                <a href="@Url.Action("Index","Product")" class="list-group-item list-group-item-action bg-light">Quản lý bài viết</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Quản lý Nhóm người dùng</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Các Mods khác</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Profile</a>
                <a href="#" class="list-group-item list-group-item-action bg-light">Status</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            @{Html.RenderAction("MenuHeader", "Login");}
            <div class="container body-content">
                @RenderBody()

            </div>

        </div>
    </div>
    <hr />
    <footer class="text-center">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    


@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @RenderSection("jsFooter", false);
</body>
</html>