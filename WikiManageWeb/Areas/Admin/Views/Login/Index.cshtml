@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>WIKI Login</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Areas/Admin/Acess/css/style.css" rel="stylesheet" />
    <!-- Bootstrap CSS -->

</head>
<body>
    <div class="container">
        <div class="text-center">
            <img class="mb-4 px-2" src="~/Areas/Admin/Acess/img/w-letter-latin-alphabet-uppercase-virtual-keyboard-512.png" width="83" height="72" />
        </div>

        @using (Html.BeginForm("Index", "Login"))
        {
            <div class="form-signin text-center ">
                <h1 class="h3 mb-5 font-weight-normal">Please sign in</h1>
                <div class="form-group m-2">
                    <label for="inputExmail" class="sr-only">Email address</label>
                    <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email address" required="" autofocus="">
                </div>
                <div class="form-group m-2">
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required="">
                </div>
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                @if (ViewBag.Message != null)
                {
                    <p class="alert alert-danger font-weight-bold">
                        @ViewBag.Message
                    </p>
                }
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                <div class="text-center">
                    <a href="@Url.Action("Register")">Đăng kí</a>
                </div>
                <p class="mt-5 mb-3 text-muted">© 2019 </p>
            </div>
        }

    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>